{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./hardhat.config.ts",
    "./types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache"
  ]
}
